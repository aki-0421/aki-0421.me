{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "include": [
      "./**/*.ts",
      "./**/*.js",
      "./**/*.cjs",
      "./**/*.mjs",
      "./**/*.jsx",
      "./**/*.tsx",
      "./**/*.d.ts",
      "./**/*.json",
      "./**/*.jsonc"
    ],
    "ignore": ["./**/node_modules", "./src/libraries/connect-gen"],
    "ignoreUnknown": true
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off",
        "noDefaultExport": "off",
        "useImportType": "error",
        "useBlockStatements": "off",
        "useSelfClosingElements": "off",
        "noUnusedTemplateLiteral": "off",
        "noRestrictedGlobals": {
          "level": "error",
          "options": {
            "deniedGlobals": ["chrome"]
          }
        }
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noNoninteractiveTabindex": "off",
        "useButtonType": "off",
        "useIframeTitle": "off"
      },
      "performance": { "noAccumulatingSpread": "off" },
      "correctness": {
        "noUnusedImports": "off",
        "noUndeclaredVariables": "off",
        "useExhaustiveDependencies": {
          "level": "error",
          "options": {
            "hooks": [
              {
                "name": "useModernLayoutEffect",
                "closureIndex": 0,
                "dependenciesIndex": 1
              }
            ]
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "off",
        "noConfusingVoidType": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noBannedTypes": "off",
        "noForEach": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "arrowParentheses": "always"
    }
  }
}